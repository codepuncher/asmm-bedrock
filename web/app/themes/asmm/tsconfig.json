{
  "extends": "@roots/bud/config/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "paths": {
      "@scripts/*": [
        "./resources/scripts/*"
      ],
      "@styles/*": [
        "./resources/styles/*"
      ]
    },
    "types": [
      "@roots/bud",
      "@roots/bud-typescript",
      "@roots/bud-tailwindcss",
      "@roots/bud-postcss",
      "@roots/bud-eslint",
      "@roots/bud-stylelint",
      "@roots/bud-preset-wordpress",
      "@types/node",
      "webpack/module"
    ]
  },
  "files": [
    "./bud.config.ts",
    "./types.d.ts"
  ],
  "exclude": [
    "./public",
    "./node_modules",
    "./vendor"
  ]
}
